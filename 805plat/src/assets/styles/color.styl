/* toast字体样式大小 */
.cube-toast-tip {
	font-size: 24px;
	line-height: 1.5;
	text-align: center;
	min-width: 150px;
	max-width: 450px;
	max-height: 300px;
}

/* Dialog样式 */
.cube-dialog-main {
	width: 500px;
}

.cube-dialog-close {
	width: 60px;
	height: 60px;
	font-size: 50px;
}

.cube-dialog-title-def {
	margin-bottom: 20px;
}

.cube-dialog-icon {
	font-size: 80px;
}

.cube-dialog-icon i {
	width: 80px;
	height: 80px;
	background-color: #fff;
}

.cube-dialog-title {
	font-size: 30px;
}

.cube-dialog-content {
	font-size: 28px;
	line-height: 1.5;
}

.cube-dialog-btn {
	font-size: 30px;
}
.cube-dialog-content-def p{
	text-align: center;
}
/*按钮*/
.cube-btn{
	line-height:normal;
}

/* ****tab内容上下居中**** */
.cube-tab {
	align-items: center;
}
/******ScrollNavBar 组件*****/
.cube-scroll-nav-bar{
	border-bottom: 1px solid #e4dcdc;
	margin-bottom: 15px;
}

.cube-scroll-nav-bar-item span{
	font-size: 28px;
}
.cube-scroll-nav-bar-item_active {
    color: #f82a31;
}